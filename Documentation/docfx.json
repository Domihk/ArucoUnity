{
  "metadata": [
    {
      "src": [
        {
          "src": "../Assets/",
          "files": [ "**/*.cs" ]
        }
      ],
      "dest": "api/",
      "filter": "filterConfig.yml"
    }
  ],
  "build": {
    "globalMetadata":
    {
      "_appTitle": "Aruco Unity documentation",
      "_appFooter": "<a href=\"https://github.com/NormandErwan/ArucoUnity\">Aruco Unity</a> - <a href=\"https://twitter.com/NormandErwan\">Erwan Normand</a>",
      "_enableSearch": true
    },
    "content": [
      {
        "src": "api/",
        "dest": "api/",
        "files": [ "*.yml" ]
      },
      {
        "src": "manual/",
        "dest": "manual/",
        "files": [ "toc.yml", "*.md" ]
      },
      {
        "files": [ "toc.yml", "index.md" ]
      }
    ],
    "resources": [
      {
        "files": [ "images/*" ]
      }
    ],
    "dest": "../Documentation"
  }
}